{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (Release)",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", ".", "--config=Release"],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$gcc", "$nvcc"]
    },
    {
      "label": "Build (Debug)",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", ".", "--config=Debug"],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$gcc", "$nvcc"]
    }
  ]
}