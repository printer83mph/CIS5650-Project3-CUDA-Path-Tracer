{
  "$schema": "vscode://schemas/launch",
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CUDA C++: Launch Debug",
      "type": "cuda-gdb",
      "request": "launch",
      "environment": [
        {"name": "WAYLAND_DISPLAY", "value": ""},
        {"name": "XDG_SESSION_TYPE", "value": "x11"}
      ],
      "program": "${workspaceFolder}/build/bin/Debug/cis565_path_tracer",
      "cwd": "${workspaceFolder}/build",
      "args": ["../scenes/cornell.json"],
      "preLaunchTask": "Build Debug"
    },
    {
      "name": "CUDA C++: Launch Release",
      "type": "cppdbg",
      "request": "launch",
      "environment": [
        {"name": "WAYLAND_DISPLAY", "value": ""},
        {"name": "XDG_SESSION_TYPE", "value": "x11"}
      ],
      "program": "${workspaceFolder}/build/bin/Release/cis565_path_tracer",
      "cwd": "${workspaceFolder}/build",
      "args": ["../scenes/cornell.json"],
      "preLaunchTask": "Build Release"
    },
    {
      "name": "CUDA C++: Attach",
      "type": "cuda-gdb",
      "request": "attach"
    },
  ]
}